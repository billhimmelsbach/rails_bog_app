<%= form_tag(creatures_path, :method => "get", id: "search-form", html: {class: 'form-group'}) do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search MONSTERS", class: "form-control" %>
      <%= submit_tag "Search", :class => 'btn btn-default',:name => nil%>
<% end %>

<% @creatures.each do |creature| %>
  <h2> <%=creature.name %>
  <h3> <%=creature.description %>
  <br>
  <br>
  <%= link_to "Show", creature_path(creature) %>
  <br>
  <br>
<% end %>
